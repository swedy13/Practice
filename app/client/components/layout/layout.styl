@import '../../css/colors.styl';

// HEADER
#header 
  z-index 1000
  position absolute
  top 0
  right 0
  left 0
  height 30px
  background-color #111
  box-shadow 0px 1px 3px #444

#logo
  height 35px
  width 35px
  margin 2px 0 0 2px
  filter drop-shadow(0px 1px 3px #444)

  &:active
    height 34px
    width 34px
    margin 3px 0 0 3px


// CONTENT
#content
  position absolute
  display inline-block
  top 30px
  bottom 25px
  left 0
  right 50px
  padding 15px 30px
  height calc(100% - 55px)
  width calc(100% - 50px)

.column {
  lost-column: 1/3 0 20px;
}


