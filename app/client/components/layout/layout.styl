// HEADER
#header 
  z-index 1000
  position absolute
  top 0
  right 0
  left 0
  height 30px
  background #111
  box-shadow 0px 1px 3px #444

#logo
  height 35px
  width 35px
  margin 2px 0 0 2px
  filter drop-shadow(0px 1px 3px #444)

  &:hover
    height 37px
    width 37px
    margin 1px 0 0 1px

  &:active
    height 35px
    width 35px
    margin 2px 0 0 2px


// CONTENT
#content
  position absolute
  display inline-block
  top 30px
  bottom 25px
  left 0
  right 50px
  padding 15px 30px
  height calc(100% - 55px)
  width calc(100% - 50px)
  background #f8f8f8

.column {
  lost-column: 1/3 0 20px;
}


// SIDEBAR
#sidebar
  user-select none
  z-index 999
  position absolute
  display inline-block
  top 30px
  bottom 0
  right 0
  height calc(100% - 30px)
  width 50px
  background #555
  border-left 1px solid #444
  box-shadow -2px 0px 3px #333

.sb-btn
  margin-top 11px
  padding-right 1px
  text-align center
    
.sb-ico
  color #ccc
  text-shadow 1px 1px 2px #222, -1px -1px 2px #222, 3px 3px 3px #333

  &:active
    font-size 1.9em
    margin-top 2px


// FOOTER  
#footer
  position absolute
  display inline-block
  bottom 0
  left 0
  right 50px
  height 25px
  width calc(100% - 50px)
  background #ddd
  box-shadow 0 -2px 1px #bbb